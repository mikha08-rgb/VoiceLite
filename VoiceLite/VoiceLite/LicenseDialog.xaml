<Window x:Class="VoiceLite.LicenseDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="VoiceLite License" Height="300" Width="450"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <StackPanel Margin="30">
        <TextBlock Text="Enter License Key" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>

        <TextBlock Text="Email:" Margin="0,0,0,5"/>
        <TextBox Name="EmailBox" Margin="0,0,0,15"/>

        <TextBlock Text="License Key:" Margin="0,0,0,5"/>
        <TextBox Name="LicenseBox" CharacterCasing="Upper" Margin="0,0,0,10"/>
        <TextBlock Text="Format: PRO-2024-XXXXX-XXX" Foreground="Gray" FontSize="11" Margin="0,0,0,20"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Name="SkipButton" Content="Skip" Width="80" Margin="0,0,10,0" Click="Skip_Click"/>
            <Button Name="ActivateButton" Content="Activate" Width="80" Click="Activate_Click"/>
        </StackPanel>
    </StackPanel>
</Window>