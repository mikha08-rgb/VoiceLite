<Window x:Class="VoiceLite.LicenseActivationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Activate VoiceLite Pro"
        Width="550" Height="380"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F5F5">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Welcome to VoiceLite"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="#333333"
                       Margin="0,0,0,10"/>
            <TextBlock Text="Enter your license key to unlock Pro features"
                       FontSize="14"
                       Foreground="#666666"
                       TextWrapping="Wrap"/>
        </StackPanel>

        <!-- Content -->
        <StackPanel Grid.Row="1" VerticalAlignment="Top">
            <!-- License Key Input -->
            <TextBlock Text="License Key:"
                       FontSize="13"
                       FontWeight="SemiBold"
                       Foreground="#333333"
                       Margin="0,0,0,8"/>

            <Border BorderBrush="#CCCCCC"
                    BorderThickness="1"
                    CornerRadius="4"
                    Background="White"
                    Margin="0,0,0,15">
                <TextBox Name="LicenseKeyTextBox"
                         FontFamily="Consolas"
                         FontSize="14"
                         Padding="12"
                         BorderThickness="0"
                         Text=""
                         VerticalContentAlignment="Center"
                         CharacterCasing="Upper"/>
            </Border>

            <!-- Status Message -->
            <Border Name="StatusBorder"
                    Background="#FFF3CD"
                    BorderBrush="#FFC107"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="12"
                    Margin="0,0,0,15"
                    Visibility="Collapsed">
                <TextBlock Name="StatusTextBlock"
                           TextWrapping="Wrap"
                           FontSize="12"
                           Foreground="#856404"/>
            </Border>

            <!-- Info Box -->
            <Border Background="#E8F4FD"
                    BorderBrush="#4A90E2"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="15"
                    Margin="0,0,0,0">
                <StackPanel>
                    <TextBlock FontSize="12"
                               Foreground="#333333"
                               TextWrapping="Wrap"
                               Margin="0,0,0,8">
                        <Run Text="✓" FontWeight="Bold"/>
                        <Run Text="Pro unlocks premium models (Small, Medium, Large)"/>
                    </TextBlock>
                    <TextBlock FontSize="12"
                               Foreground="#333333"
                               TextWrapping="Wrap"
                               Margin="0,0,0,8">
                        <Run Text="✓" FontWeight="Bold"/>
                        <Run Text="Works on up to 3 devices"/>
                    </TextBlock>
                    <TextBlock FontSize="12"
                               Foreground="#333333"
                               TextWrapping="Wrap">
                        <Run Text="✓" FontWeight="Bold"/>
                        <Run Text="One-time payment, lifetime access"/>
                    </TextBlock>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button Name="UseFreeButton"
                    Content="Use Free Version"
                    Width="140"
                    Background="#E0E0E0"
                    Foreground="#333333"
                    Click="UseFree_Click"/>

            <Button Name="ActivateButton"
                    Content="Activate Pro"
                    Width="140"
                    Background="#4A90E2"
                    Foreground="White"
                    FontWeight="SemiBold"
                    Click="Activate_Click"
                    IsDefault="True"/>
        </StackPanel>

        <!-- Footer Link -->
        <TextBlock Grid.Row="2"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Bottom"
                   FontSize="11"
                   Foreground="#999999"
                   Margin="0,0,0,8">
            <Run Text="Don't have a license?"/>
            <Hyperlink NavigateUri="https://voicelite.app"
                       RequestNavigate="Hyperlink_RequestNavigate"
                       Foreground="#4A90E2">
                <Run Text="Get Pro for $20"/>
            </Hyperlink>
        </TextBlock>
    </Grid>
</Window>
