<Window x:Class="VoiceLite.PurchaseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Purchase VoiceLite" Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#1E1E1E">

    <Window.Resources>
        <ResourceDictionary Source="Resources/ModernStyles.xaml"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2D2D30">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Choose Your VoiceLite Plan"
                          FontSize="28" FontWeight="Bold"
                          Foreground="White"/>
                <TextBlock Text="One-time purchase, lifetime license"
                          FontSize="14"
                          Foreground="#B0B0B0"
                          HorizontalAlignment="Center"
                          Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Pricing Cards -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Personal License -->
                <Border Grid.Column="0" Margin="10"
                       Background="#2D2D30"
                       BorderBrush="#3E3E42"
                       BorderThickness="2"
                       CornerRadius="8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Margin="20">
                            <TextBlock Text="PERSONAL"
                                     FontSize="14"
                                     FontWeight="Bold"
                                     Foreground="#4CAF50"/>
                            <TextBlock Text="$29.99"
                                     FontSize="36"
                                     FontWeight="Bold"
                                     Foreground="White"
                                     Margin="0,10,0,0"/>
                            <TextBlock Text="One-time payment"
                                     FontSize="12"
                                     Foreground="#B0B0B0"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Margin="20,10">
                            <TextBlock Text="✓ All Whisper models" Foreground="#B0B0B0" Margin="0,5"/>
                            <TextBlock Text="✓ Unlimited transcriptions" Foreground="#B0B0B0" Margin="0,5"/>
                            <TextBlock Text="✓ All text injection modes" Foreground="#B0B0B0" Margin="0,5"/>
                            <TextBlock Text="✓ 1 device activation" Foreground="#B0B0B0" Margin="0,5"/>
                            <TextBlock Text="✓ Personal use only" Foreground="#B0B0B0" Margin="0,5"/>
                            <TextBlock Text="✓ Email support" Foreground="#B0B0B0" Margin="0,5"/>
                            <TextBlock Text="✓ Lifetime updates" Foreground="#B0B0B0" Margin="0,5"/>
                        </StackPanel>

                        <Button x:Name="PurchasePersonalBtn"
                               Grid.Row="2"
                               Content="Purchase Personal"
                               Style="{StaticResource ModernButtonStyle}"
                               Height="40"
                               Margin="20"
                               Click="PurchasePersonalBtn_Click"/>
                    </Grid>
                </Border>

                <!-- Professional License -->
                <Border Grid.Column="1" Margin="10"
                       Background="#2D2D30"
                       BorderBrush="#007ACC"
                       BorderThickness="2"
                       CornerRadius="8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Popular Badge -->
                        <Border HorizontalAlignment="Center"
                               VerticalAlignment="Top"
                               Margin="0,-15,0,0"
                               Background="#007ACC"
                               CornerRadius="10"
                               Padding="15,5">
                            <TextBlock Text="MOST POPULAR"
                                     FontSize="10"
                                     FontWeight="Bold"
                                     Foreground="White"/>
                        </Border>

                        <StackPanel Grid.Row="0" Margin="20,25,20,20">
                            <TextBlock Text="PROFESSIONAL"
                                     FontSize="14"
                                     FontWeight="Bold"
                                     Foreground="#007ACC"/>
                            <TextBlock Text="$59.99"
                                     FontSize="36"
                                     FontWeight="Bold"
                                     Foreground="White"
                                     Margin="0,10,0,0"/>
                            <TextBlock Text="One-time payment"
                                     FontSize="12"
                                     Foreground="#B0B0B0"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Margin="20,10">
                            <TextBlock Text="✓ Everything in Personal" Foreground="#B0B0B0" Margin="0,5" FontWeight="Bold"/>
                            <TextBlock Text="✓ 3 device activations" Foreground="#B0B0B0" Margin="0,5"/>
                            <TextBlock Text="✓ Commercial use allowed" Foreground="#B0B0B0" Margin="0,5"/>
                            <TextBlock Text="✓ Priority support" Foreground="#B0B0B0" Margin="0,5"/>
                            <TextBlock Text="✓ Advanced features" Foreground="#B0B0B0" Margin="0,5"/>
                            <TextBlock Text="✓ Custom hotkeys" Foreground="#B0B0B0" Margin="0,5"/>
                            <TextBlock Text="✓ Priority updates" Foreground="#B0B0B0" Margin="0,5"/>
                        </StackPanel>

                        <Button x:Name="PurchaseProBtn"
                               Grid.Row="2"
                               Content="Purchase Professional"
                               Height="40"
                               Margin="20"
                               Background="#007ACC"
                               Click="PurchaseProBtn_Click">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                       BorderBrush="{TemplateBinding BorderBrush}"
                                                       BorderThickness="1"
                                                       CornerRadius="4">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                    VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </Border>

                <!-- Business License -->
                <Border Grid.Column="2" Margin="10"
                       Background="#2D2D30"
                       BorderBrush="#3E3E42"
                       BorderThickness="2"
                       CornerRadius="8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Margin="20">
                            <TextBlock Text="BUSINESS"
                                     FontSize="14"
                                     FontWeight="Bold"
                                     Foreground="#FF9800"/>
                            <TextBlock Text="$199.99"
                                     FontSize="36"
                                     FontWeight="Bold"
                                     Foreground="White"
                                     Margin="0,10,0,0"/>
                            <TextBlock Text="One-time payment"
                                     FontSize="12"
                                     Foreground="#B0B0B0"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Margin="20,10">
                            <TextBlock Text="✓ Everything in Professional" Foreground="#B0B0B0" Margin="0,5" FontWeight="Bold"/>
                            <TextBlock Text="✓ 5 users / organization" Foreground="#B0B0B0" Margin="0,5"/>
                            <TextBlock Text="✓ Unlimited devices" Foreground="#B0B0B0" Margin="0,5"/>
                            <TextBlock Text="✓ Volume licensing" Foreground="#B0B0B0" Margin="0,5"/>
                            <TextBlock Text="✓ Dedicated support" Foreground="#B0B0B0" Margin="0,5"/>
                            <TextBlock Text="✓ Training materials" Foreground="#B0B0B0" Margin="0,5"/>
                            <TextBlock Text="✓ Invoice billing" Foreground="#B0B0B0" Margin="0,5"/>
                        </StackPanel>

                        <Button x:Name="PurchaseBusinessBtn"
                               Grid.Row="2"
                               Content="Purchase Business"
                               Style="{StaticResource ModernButtonStyle}"
                               Height="40"
                               Margin="20"
                               Click="PurchaseBusinessBtn_Click"/>
                    </Grid>
                </Border>
            </Grid>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#2D2D30" BorderBrush="#3E3E42" BorderThickness="0,1,0,0">
            <Grid Margin="20">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <TextBlock Text="🔒 Secure checkout via Paddle"
                              Foreground="#B0B0B0"
                              VerticalAlignment="Center"/>
                    <TextBlock Text=" • "
                              Foreground="#B0B0B0"
                              VerticalAlignment="Center"/>
                    <TextBlock Text="30-day money back guarantee"
                              Foreground="#B0B0B0"
                              VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="RestoreLicenseBtn"
                           Content="Restore License"
                           Style="{StaticResource ModernButtonStyle}"
                           Width="120"
                           Height="35"
                           Margin="0,0,10,0"
                           Click="RestoreLicenseBtn_Click"/>
                    <Button x:Name="CancelBtn"
                           Content="Cancel"
                           Style="{StaticResource ModernButtonStyle}"
                           Width="100"
                           Height="35"
                           Click="CancelBtn_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>