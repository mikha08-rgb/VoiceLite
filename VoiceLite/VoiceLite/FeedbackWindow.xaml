<Window x:Class="VoiceLite.FeedbackWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Report Bug / Feedback - VoiceLite"
        Height="550"
        Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F5F5">

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Report Bug / Feedback"
                       FontSize="24"
                       FontWeight="Bold"
                       Margin="0,0,0,10"/>
            <TextBlock Text="Help us improve VoiceLite by reporting bugs or suggesting features"
                       FontSize="13"
                       Foreground="#666"
                       TextWrapping="Wrap"/>
        </StackPanel>

        <!-- Form -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Feedback Type -->
                <TextBlock Text="Feedback Type *"
                           FontWeight="SemiBold"/>
                <ComboBox Name="FeedbackTypeComboBox"
                          SelectedIndex="0">
                    <ComboBoxItem Content="🐛 Bug Report" Tag="BUG"/>
                    <ComboBoxItem Content="💡 Feature Request" Tag="FEATURE_REQUEST"/>
                    <ComboBoxItem Content="❓ Question" Tag="QUESTION"/>
                    <ComboBoxItem Content="💬 General Feedback" Tag="GENERAL"/>
                </ComboBox>

                <!-- Subject -->
                <TextBlock Text="Subject *"
                           FontWeight="SemiBold"/>
                <TextBox Name="SubjectTextBox"
                         MaxLength="200"
                         ToolTip="Brief summary of your feedback (5-200 characters)"/>

                <!-- Message -->
                <TextBlock Text="Message *"
                           FontWeight="SemiBold"/>
                <TextBox Name="MessageTextBox"
                         Height="150"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"
                         MaxLength="5000"
                         ToolTip="Detailed description of your feedback (10-5000 characters)"/>

                <!-- Email (Optional) -->
                <TextBlock Text="Email (optional)"
                           FontWeight="SemiBold"/>
                <TextBox Name="EmailTextBox"
                         MaxLength="100"
                         ToolTip="Optional - if you'd like us to follow up"/>

                <!-- Auto-populated Metadata Info -->
                <Border Background="#E3F2FD"
                        BorderBrush="#2196F3"
                        BorderThickness="1"
                        Padding="10"
                        Margin="0,0,0,15"
                        CornerRadius="5">
                    <StackPanel>
                        <TextBlock Text="📊 Diagnostic Information (automatically included):"
                                   FontWeight="SemiBold"
                                   Foreground="#1976D2"
                                   Margin="0,0,0,5"/>
                        <TextBlock Name="MetadataTextBlock"
                                   FontSize="12"
                                   Foreground="#555"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <Grid Grid.Row="2" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="1"
                    Name="SubmitButton"
                    Content="Submit Feedback"
                    Click="SubmitButton_Click"
                    Background="#4CAF50"
                    Foreground="White"
                    BorderThickness="0"/>

            <Button Grid.Column="3"
                    Name="CancelButton"
                    Content="Cancel"
                    Click="CancelButton_Click"
                    Background="#9E9E9E"
                    Foreground="White"
                    BorderThickness="0"/>
        </Grid>
    </Grid>
</Window>
