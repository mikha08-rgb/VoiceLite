<Window x:Class="VoiceLite.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="VoiceLite" Height="420" Width="480"
        WindowStartupLocation="CenterScreen"
        ShowInTaskbar="True"
        Background="{StaticResource PrimaryBackgroundBrush}"
        StateChanged="Window_StateChanged">

    <Window.Resources>
        <!-- Custom Status Color Converters could go here -->
    </Window.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>   <!-- Title -->
            <RowDefinition Height="Auto"/>   <!-- Status Info Card -->
            <RowDefinition Height="*"/>      <!-- Transcription Area -->
            <RowDefinition Height="Auto"/>   <!-- Controls -->
        </Grid.RowDefinitions>

        <!-- Application Title -->
        <TextBlock Grid.Row="0"
                   Text="VoiceLite"
                   Style="{StaticResource TitleTextStyle}"
                   HorizontalAlignment="Center"/>

        <!-- Status Information Card -->
        <Border Grid.Row="1" Style="{StaticResource ModernCardStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Current Status with Visual Indicator -->
                <StackPanel Grid.Row="0" Orientation="Horizontal"
                           HorizontalAlignment="Center" Margin="0,0,0,8">
                    <Border x:Name="StatusIndicator"
                            Style="{StaticResource StatusIndicatorStyle}"/>
                    <TextBlock x:Name="StatusText"
                               Text="Ready"
                               Style="{StaticResource StatusTextStyle}"
                               Foreground="{StaticResource ReadyBrush}"/>
                </StackPanel>

                <!-- Configuration Info -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Hotkey Info -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal"
                               HorizontalAlignment="Center">
                        <TextBlock Text="Hotkey: "
                                   Style="{StaticResource CaptionTextStyle}"/>
                        <TextBlock x:Name="HotkeyText"
                                   Text="F1"
                                   Style="{StaticResource CaptionTextStyle}"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource AccentBrush}"/>
                    </StackPanel>

                    <!-- Separator -->
                    <Border Grid.Column="1"
                            Width="1" Height="16"
                            Background="{StaticResource BorderBrush}"
                            Margin="12,0"/>

                    <!-- Microphone Info -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal"
                               HorizontalAlignment="Center">
                        <TextBlock Text="Mic: "
                                   Style="{StaticResource CaptionTextStyle}"/>
                        <TextBlock x:Name="MicrophoneText"
                                   Text="Default"
                                   Style="{StaticResource CaptionTextStyle}"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource AccentBrush}"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <!-- Transcription Display Area -->
        <Border Grid.Row="2" Style="{StaticResource ModernCardStyle}">
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                         HorizontalScrollBarVisibility="Disabled">
                <TextBlock x:Name="TranscriptionText"
                          Text="Ready! Press and hold F1 to record, release to transcribe and type."
                          Style="{StaticResource BodyTextStyle}"
                          TextWrapping="Wrap"
                          Padding="4"
                          LineHeight="22"
                          MinHeight="120"/>
            </ScrollViewer>
        </Border>

        <!-- Control Panel -->
        <StackPanel Grid.Row="3" Orientation="Vertical" Spacing="12">

            <!-- Action Buttons -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="TestButton"
                        Grid.Column="0"
                        Content="Test Recording (Click or Press F1)"
                        Style="{StaticResource ModernButtonStyle}"
                        Height="40"
                        Margin="0,0,8,0"
                        Click="TestButton_Click"/>

                <Button x:Name="SettingsButton"
                        Grid.Column="1"
                        Content="Settings"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Width="100"
                        Height="40"
                        Click="SettingsButton_Click"/>
            </Grid>

            <!-- Options -->
            <CheckBox x:Name="MinimizeCheckBox"
                      Content="Minimize to system tray on close"
                      Style="{StaticResource ModernCheckBoxStyle}"
                      IsChecked="True"
                      HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>