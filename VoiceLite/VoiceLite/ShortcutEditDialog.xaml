<Window x:Class="VoiceLite.ShortcutEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Custom Shortcut" Height="500" Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        MinHeight="450"
        MinWidth="550"
        WindowStyle="SingleBorderWindow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#FAFAFA" Padding="25,20">
            <TextBlock Name="DialogTitle" Text="Add Custom Shortcut" FontSize="18" FontWeight="SemiBold" Foreground="#333333"/>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="30">
            <StackPanel>
                <!-- Trigger Input Section -->
                <Border Background="#F8F9FA"
                        Padding="20"
                        CornerRadius="8"
                        Margin="0,0,0,20"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="What you say (trigger phrase)"
                                   Margin="0,0,0,10"
                                   FontWeight="Bold"
                                   FontSize="15"
                                   Foreground="#2C3E50"/>
                        <TextBlock Text="This is what you'll say out loud. Can be a single word or multiple words."
                                   Margin="0,0,0,5"
                                   FontSize="12"
                                   Foreground="#7F8C8D"
                                   TextWrapping="Wrap"/>
                        <TextBlock Text="Examples: 'my email' or 'btw' or 'my full address'"
                                   Margin="0,0,0,12"
                                   FontSize="11"
                                   Foreground="#95A5A6"
                                   FontStyle="Italic"/>
                        <TextBox Name="TriggerTextBox"
                                 Height="45"
                                 Padding="15,12"
                                 FontSize="15"
                                 VerticalContentAlignment="Center"
                                 BorderBrush="#BDC3C7"
                                 BorderThickness="2"
                                 TextChanged="TriggerTextBox_TextChanged"/>
                    </StackPanel>
                </Border>

                <!-- Replacement Input Section -->
                <Border Background="#F8F9FA"
                        Padding="20"
                        CornerRadius="8"
                        Margin="0,0,0,20"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="What appears (replacement text)"
                                   Margin="0,0,0,10"
                                   FontWeight="Bold"
                                   FontSize="15"
                                   Foreground="#2C3E50"/>
                        <TextBlock Text="This text will replace your trigger phrase. Can be as long as you want."
                                   Margin="0,0,0,5"
                                   FontSize="12"
                                   Foreground="#7F8C8D"
                                   TextWrapping="Wrap"/>
                        <TextBlock Text="Examples: 'john@example.com' or 'by the way' or '123 Main St, NY 10001'"
                                   Margin="0,0,0,12"
                                   FontSize="11"
                                   Foreground="#95A5A6"
                                   FontStyle="Italic"/>
                        <TextBox Name="ReplacementTextBox"
                                 MinHeight="80"
                                 MaxHeight="150"
                                 Padding="15,12"
                                 FontSize="15"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"
                                 BorderBrush="#BDC3C7"
                                 BorderThickness="2"
                                 TextChanged="ReplacementTextBox_TextChanged"/>
                    </StackPanel>
                </Border>

                <!-- Enabled Checkbox -->
                <CheckBox Name="EnabledCheckBox"
                          Content="Enable this shortcut"
                          IsChecked="True"
                          Margin="5,0,0,20"
                          FontSize="14"
                          FontWeight="Medium"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer Buttons -->
        <Border Grid.Row="2" Background="#F5F5F5" Padding="20,15" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Name="CancelButton"
                        Content="Cancel"
                        Width="80"
                        Height="32"
                        Margin="0,0,10,0"
                        Click="CancelButton_Click"/>
                <Button Name="SaveButton"
                        Content="Save"
                        Width="80"
                        Height="32"
                        IsEnabled="False"
                        Click="SaveButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
