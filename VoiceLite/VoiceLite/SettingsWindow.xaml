                            <ComboBoxItem Content="Vietnamese (Tiếng Việt)" Tag="vi"/>

                            <!-- African & Other Languages -->
                            <ComboBoxItem Content="Amharic (አማርኛ)" Tag="am"/>
                            <ComboBoxItem Content="Breton (Brezhoneg)" Tag="br"/>
                            <ComboBoxItem Content="Haitian Creole (Kreyòl)" Tag="ht"/>
                            <ComboBoxItem Content="Hausa (Hausa)" Tag="ha"/>
                            <ComboBoxItem Content="Luxembourgish (Lëtzebuergesch)" Tag="lb"/>
                            <ComboBoxItem Content="Malagasy (Malagasy)" Tag="mg"/>
                            <ComboBoxItem Content="Malay (Bahasa Melayu)" Tag="ms"/>
                            <ComboBoxItem Content="Maori (Te Reo Māori)" Tag="mi"/>
                            <ComboBoxItem Content="Occitan (Occitan)" Tag="oc"/>
                            <ComboBoxItem Content="Pashto (پښتو)" Tag="ps"/>
                            <ComboBoxItem Content="Shona (Shona)" Tag="sn"/>
                            <ComboBoxItem Content="Somali (Soomaali)" Tag="so"/>
                            <ComboBoxItem Content="Swahili (Kiswahili)" Tag="sw"/>
                            <ComboBoxItem Content="Yiddish (ייִדיש)" Tag="yi"/>
                            <ComboBoxItem Content="Yoruba (Yorùbá)" Tag="yo"/>

                            <!-- Latin & Sanskrit -->
                            <ComboBoxItem Content="Latin (Latina)" Tag="la"/>
                            <ComboBoxItem Content="Sanskrit (संस्कृतम्)" Tag="sa"/>
                        </ComboBox>
                        <TextBlock Text="Select the language you'll be speaking. Use Auto-detect if you speak multiple languages."
                                   FontSize="11"
                                   Foreground="Gray"
                                   Margin="0,5,0,0"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </GroupBox>

                <!-- Audio Enhancements -->
                <GroupBox Header="Audio Enhancements" Margin="0,0,0,15">
                    <StackPanel Margin="10">
                        <CheckBox Name="NoiseSuppressionCheckBox"
                                  Content="Enable noise suppression"
                                  Margin="0,0,0,5"/>
                        <CheckBox Name="AutoGainCheckBox"
                                  Content="Enable automatic gain control"
                                  Margin="0,0,0,10"/>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Target RMS:" VerticalAlignment="Center"/>
                            <TextBox Name="TargetRmsTextBox" Width="60" Margin="5,0,15,0"/>
                            <TextBlock Text="Noise gate threshold:" VerticalAlignment="Center"/>
                            <TextBox Name="NoiseThresholdTextBox" Width="60" Margin="5,0,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                <!-- VoiceShortcuts -->
                <GroupBox Header="VoiceShortcuts" Margin="0,0,0,15">
                    <StackPanel Margin="10">
                        <CheckBox Name="EnableCustomDictionaryCheckBox"
                                  Content="Enable VoiceShortcuts"
                                  IsChecked="True"
                                  Margin="0,0,0,10"/>
                        <TextBlock Name="DictionaryCountText"
                                   Text="0 shortcuts loaded"
                                   FontSize="11"
                                   Foreground="Gray"
                                   Margin="0,0,0,10"/>
                        <Button Name="ManageDictionaryButton"
                                Content="Manage VoiceShortcuts..."
                                Width="180"
                                HorizontalAlignment="Left"
                                Click="ManageDictionaryButton_Click"
                                ToolTip="Add, edit, or remove voice shortcuts and custom word replacements"/>
                    </StackPanel>
                </GroupBox>

                <!-- Other Settings -->
                <GroupBox Header="Other Settings" Margin="0,0,0,15">
                    <StackPanel Margin="10">
                        <CheckBox Name="StartWithWindowsCheckBox"
                                  Content="Start with Windows"
                                  Margin="0,0,0,5"
                                  IsEnabled="False"/>
                        <CheckBox Name="MinimizeToTrayCheckBox"
                                  Content="Minimize to system tray on close"
                                  IsChecked="True"
                                  Margin="0,0,0,5"/>
                        <CheckBox Name="ShowTrayIconCheckBox"
                                  Content="Show system tray icon"
                                  IsChecked="True"
                                  IsEnabled="False"
                                  Margin="0,0,0,5"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Name="SendFeedbackButton"
                    Content="Send Feedback"
                    Width="120"
                    Margin="0,0,10,0"
                    Click="SendFeedbackButton_Click"
                    ToolTip="Send feedback, report bugs, or request features"/>
            <Button Name="SaveButton"
                    Content="Save"
                    Width="80"
                    Margin="0,0,10,0"
                    Click="SaveButton_Click"
                    IsDefault="True"/>
            <Button Name="CancelButton"
                    Content="Cancel"
                    Width="80"
                    Click="CancelButton_Click"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
