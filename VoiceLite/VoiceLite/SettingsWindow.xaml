                            <ComboBoxItem Content="Estonian (Eesti)" Tag="et"/>
                            <ComboBoxItem Content="Finnish (Suomi)" Tag="fi"/>
                            <ComboBoxItem Content="Galician (Galego)" Tag="gl"/>
                            <ComboBoxItem Content="Greek (Ελληνικά)" Tag="el"/>
                            <ComboBoxItem Content="Hungarian (Magyar)" Tag="hu"/>
                            <ComboBoxItem Content="Icelandic (Íslenska)" Tag="is"/>
                            <ComboBoxItem Content="Irish (Gaeilge)" Tag="ga"/>
                            <ComboBoxItem Content="Latvian (Latviešu)" Tag="lv"/>
                            <ComboBoxItem Content="Lithuanian (Lietuvių)" Tag="lt"/>
                            <ComboBoxItem Content="Macedonian (Македонски)" Tag="mk"/>
                            <ComboBoxItem Content="Maltese (Malti)" Tag="mt"/>
                            <ComboBoxItem Content="Norwegian (Norsk)" Tag="no"/>
                            <ComboBoxItem Content="Polish (Polski)" Tag="pl"/>
                            <ComboBoxItem Content="Romanian (Română)" Tag="ro"/>
                            <ComboBoxItem Content="Serbian (Српски)" Tag="sr"/>
                            <ComboBoxItem Content="Slovak (Slovenčina)" Tag="sk"/>
                            <ComboBoxItem Content="Slovenian (Slovenščina)" Tag="sl"/>
                            <ComboBoxItem Content="Swedish (Svenska)" Tag="sv"/>
                            <ComboBoxItem Content="Turkish (Türkçe)" Tag="tr"/>
                            <ComboBoxItem Content="Ukrainian (Українська)" Tag="uk"/>
                            <ComboBoxItem Content="Welsh (Cymraeg)" Tag="cy"/>

                            <!-- Asian Languages -->
                            <ComboBoxItem Content="Afrikaans" Tag="af"/>
                            <ComboBoxItem Content="Armenian (Հայերեն)" Tag="hy"/>
                            <ComboBoxItem Content="Azerbaijani (Azərbaycan)" Tag="az"/>
                            <ComboBoxItem Content="Bengali (বাংলা)" Tag="bn"/>
                            <ComboBoxItem Content="Burmese (မြန်မာ)" Tag="my"/>
                            <ComboBoxItem Content="Georgian (ქართული)" Tag="ka"/>
                            <ComboBoxItem Content="Gujarati (ગુજરાતી)" Tag="gu"/>
                            <ComboBoxItem Content="Hebrew (עברית)" Tag="he"/>
