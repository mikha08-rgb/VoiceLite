<Window x:Class="VoiceLite.AnalyticsConsentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Help Improve VoiceLite"
        Height="450"
        Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow"
        Background="#F5F5F5">

    <Window.Resources>
        <!-- Modern button style -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#45A049"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#9E9E9E"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#757575"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Icon -->
        <Viewbox Grid.Row="0" Width="64" Height="64" Margin="0,0,0,20">
            <Canvas Width="24" Height="24">
                <!-- Chart icon -->
                <Path Fill="#2196F3" Data="M19,3H5C3.9,3 3,3.9 3,5V19C3,20.1 3.9,21 5,21H19C20.1,21 21,20.1 21,19V5C21,3.9 20.1,3 19,3M9,17H7V10H9V17M13,17H11V7H13V17M17,17H15V13H17V17Z"/>
            </Canvas>
        </Viewbox>

        <!-- Title -->
        <TextBlock Grid.Row="1"
                   Text="Help Improve VoiceLite"
                   FontSize="24"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,15"
                   Foreground="#212121"/>

        <!-- Message -->
        <TextBlock Grid.Row="2"
                   TextWrapping="Wrap"
                   FontSize="14"
                   LineHeight="22"
                   Foreground="#424242"
                   Margin="0,0,0,15">
            <Run Text="VoiceLite can send anonymous usage data to help us improve the app. We track app version, model usage, and transcription counts."/>
            <LineBreak/>
            <LineBreak/>
            <Run Text="We " FontWeight="Bold"/>
            <Run Text="never" FontWeight="Bold" Foreground="#F44336"/>
            <Run Text=" collect your voice recordings or transcription content." FontWeight="Bold"/>
        </TextBlock>

        <!-- Details expander -->
        <Expander Grid.Row="3"
                  Header="What exactly is tracked?"
                  FontSize="13"
                  Margin="0,10,0,20"
                  IsExpanded="False">
            <Border Background="White"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="15"
                    Margin="0,10,0,0">
                <StackPanel>
                    <TextBlock TextWrapping="Wrap" FontSize="12" Foreground="#616161" Margin="0,0,0,10">
                        <Run Text="✅ " Foreground="#4CAF50" FontWeight="Bold"/>
                        <Run Text="What we track:" FontWeight="SemiBold"/>
                    </TextBlock>
                    <TextBlock TextWrapping="Wrap" FontSize="12" Foreground="#616161" Margin="15,0,0,5">
                        • App version (e.g., v1.0.16)
                    </TextBlock>
                    <TextBlock TextWrapping="Wrap" FontSize="12" Foreground="#616161" Margin="15,0,0,5">
                        • Operating system (e.g., Windows 11)
                    </TextBlock>
                    <TextBlock TextWrapping="Wrap" FontSize="12" Foreground="#616161" Margin="15,0,0,5">
                        • Model used (Lite, Pro, Elite, Ultra)
                    </TextBlock>
                    <TextBlock TextWrapping="Wrap" FontSize="12" Foreground="#616161" Margin="15,0,0,5">
                        • Daily transcription count (aggregated, no content)
                    </TextBlock>
                    <TextBlock TextWrapping="Wrap" FontSize="12" Foreground="#616161" Margin="15,0,0,15">
                        • Anonymous user ID (SHA256 hash, irreversible)
                    </TextBlock>

                    <TextBlock TextWrapping="Wrap" FontSize="12" Foreground="#616161" Margin="0,10,0,10">
                        <Run Text="❌ " Foreground="#F44336" FontWeight="Bold"/>
                        <Run Text="What we DON'T track:" FontWeight="SemiBold"/>
                    </TextBlock>
                    <TextBlock TextWrapping="Wrap" FontSize="12" Foreground="#616161" Margin="15,0,0,5">
                        • Voice recordings or audio data
                    </TextBlock>
                    <TextBlock TextWrapping="Wrap" FontSize="12" Foreground="#616161" Margin="15,0,0,5">
                        • Transcription text or content
                    </TextBlock>
                    <TextBlock TextWrapping="Wrap" FontSize="12" Foreground="#616161" Margin="15,0,0,5">
                        • Personal information (name, email)
                    </TextBlock>
                    <TextBlock TextWrapping="Wrap" FontSize="12" Foreground="#616161" Margin="15,0,0,0">
                        • Keystrokes or screen content
                    </TextBlock>
                </StackPanel>
            </Border>
        </Expander>

        <!-- Buttons -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button x:Name="EnableButton"
                    Content="Enable Analytics"
                    Style="{StaticResource ModernButtonStyle}"
                    Width="160"
                    Margin="0,0,15,0"
                    Click="EnableButton_Click"/>
            <Button x:Name="DeclineButton"
                    Content="No Thanks"
                    Style="{StaticResource SecondaryButtonStyle}"
                    Width="160"
                    Click="DeclineButton_Click"/>
        </StackPanel>

        <!-- Footer note -->
        <TextBlock Grid.Row="5"
                   Text="You can change this anytime in Settings"
                   FontSize="11"
                   Foreground="#9E9E9E"
                   HorizontalAlignment="Center"
                   Margin="0,15,0,0"/>
    </Grid>
</Window>
