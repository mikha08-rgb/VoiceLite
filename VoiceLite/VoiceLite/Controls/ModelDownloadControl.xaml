<UserControl x:Class="VoiceLite.Controls.ModelDownloadControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="600">
    <StackPanel>
        <TextBlock Text="Select your AI model:"
                   FontSize="14"
                   FontWeight="SemiBold"
                   Margin="0,0,0,15"/>

        <TextBlock Text="Larger models offer better accuracy but require more RAM and take longer to process."
                   TextWrapping="Wrap"
                   Foreground="Gray"
                   FontSize="11"
                   Margin="0,0,0,20"/>

        <!-- Model List -->
        <ItemsControl Name="ModelList" Margin="0">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            CornerRadius="5"
                            Padding="15"
                            Margin="0,0,0,10"
                            Background="White">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Radio Button -->
                            <RadioButton Name="ModelRadio"
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        GroupName="ModelSelection"
                                        VerticalAlignment="Center"
                                        Margin="0,0,10,0"
                                        IsEnabled="{Binding IsInstalled}"
                                        IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                        Checked="ModelRadio_Checked"/>

                            <!-- Model Info -->
                            <StackPanel Grid.Row="0" Grid.Column="1" VerticalAlignment="Center">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding DisplayName}"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding StatusBadge}"
                                               FontSize="11"
                                               FontWeight="Bold"
                                               Foreground="{Binding StatusColor}"
                                               Margin="8,0,0,0"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                                <TextBlock Text="{Binding Description}"
                                           FontSize="11"
                                           Foreground="Gray"
                                           Margin="0,2,0,0"
                                           TextWrapping="Wrap"/>
                            </StackPanel>

                            <!-- Download/Status Button -->
                            <Button Name="ActionButton"
                                    Grid.Row="0"
                                    Grid.Column="2"
                                    Content="{Binding ActionButtonText}"
                                    Width="100"
                                    Height="30"
                                    Margin="10,0,0,0"
                                    VerticalAlignment="Center"
                                    Visibility="{Binding ActionButtonVisibility}"
                                    IsEnabled="{Binding ActionButtonEnabled}"
                                    Click="ActionButton_Click"
                                    Tag="{Binding}"/>

                            <!-- Download Progress -->
                            <StackPanel Grid.Row="1"
                                       Grid.Column="1"
                                       Grid.ColumnSpan="2"
                                       Margin="0,10,0,0"
                                       Visibility="{Binding DownloadProgressVisibility}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <ProgressBar Grid.Column="0"
                                                Height="8"
                                                Value="{Binding DownloadProgress}"
                                                Maximum="100"/>
                                    <TextBlock Grid.Column="1"
                                              Text="{Binding DownloadProgressText}"
                                              FontSize="10"
                                              Foreground="Gray"
                                              Margin="10,0,0,0"
                                              VerticalAlignment="Center"/>
                                </Grid>
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!-- Current Selection Info -->
        <Border Background="#F0F9FF"
                BorderBrush="#BAE6FD"
                BorderThickness="1"
                CornerRadius="5"
                Padding="15"
                Margin="0,20,0,0">
            <StackPanel>
                <TextBlock Text="ðŸ’¡ Tip" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBlock Name="TipText"
                          Text="Select a model above to see details here."
                          TextWrapping="Wrap"
                          FontSize="11"
                          Foreground="#1E3A8A"/>
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>
