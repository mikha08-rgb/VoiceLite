<UserControl x:Class="VoiceLite.Controls.ModelComparisonControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="700">
    <UserControl.Resources>
        <Style x:Key="ModelCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="15"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#B0B0B0"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect ShadowDepth="2" BlurRadius="8" Color="#20000000"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SelectedCardStyle" TargetType="Border" BasedOn="{StaticResource ModelCardStyle}">
            <Setter Property="BorderBrush" Value="#4CAF50"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#F8FFF8" Offset="0"/>
                        <GradientStop Color="#FFFFFF" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="MetricBarStyle" TargetType="Border">
            <Setter Property="Height" Value="8"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Margin" Value="0,2"/>
        </Style>

    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Padding="10,5" Background="#FAFAFA">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Choose Your Whisper Model"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="#333333"/>
                    <TextBlock Text="Select based on your needs: speed vs accuracy trade-off"
                               FontSize="12"
                               Foreground="#808080"
                               Margin="0,2,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            VerticalAlignment="Center">
                    <TextBlock Text="Total disk usage: "
                               FontSize="12"
                               Foreground="#606060"/>
                    <TextBlock Name="TotalSizeText"
                               Text="0 MB"
                               FontSize="12"
                               FontWeight="SemiBold"
                               Foreground="#606060"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Model Cards ScrollViewer -->
        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Padding="10">
            <ItemsControl Name="ModelsItemsControl">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Width="210"
                                Style="{StaticResource ModelCardStyle}"
                                Tag="{Binding}"
                                MouseLeftButtonUp="ModelCard_Click">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Header with Name and Size -->
                                <Grid Grid.Row="0" Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0"
                                               Text="{Binding DisplayName}"
                                               FontSize="16"
                                               FontWeight="Bold"
                                               Foreground="#333333"/>

                                    <Border Grid.Column="1"
                                            Background="#E8F5E9"
                                            CornerRadius="10"
                                            Padding="8,2">
                                        <TextBlock Text="{Binding FileSizeDisplay}"
                                                   FontSize="11"
                                                   FontWeight="SemiBold"
                                                   Foreground="#2E7D32"/>
                                    </Border>
                                </Grid>

                                <!-- Recommended Badge -->
                                <Border Grid.Row="1"
                                        Background="#FFF3E0"
                                        CornerRadius="4"
                                        Padding="5,2"
                                        Margin="0,0,0,8"
                                        HorizontalAlignment="Left"
                                        Visibility="{Binding IsRecommended}">
                                    <TextBlock Text="⭐ Recommended"
                                               FontSize="11"
                                               Foreground="#F57C00"/>
                                </Border>

                                <!-- Speed Rating -->
                                <StackPanel Grid.Row="2" Margin="0,2">
                                    <TextBlock Text="Speed" FontSize="11" Foreground="#808080"/>
                                    <Grid>
                                        <Border Background="#E0E0E0"
                                                Style="{StaticResource MetricBarStyle}"/>
                                        <Border HorizontalAlignment="Left"
                                                Style="{StaticResource MetricBarStyle}"
                                                Width="{Binding SpeedRatingWidth}">
                                            <Border.Background>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                    <GradientStop Color="#4CAF50" Offset="0"/>
                                                    <GradientStop Color="#8BC34A" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Border.Background>
                                        </Border>
                                    </Grid>
                                </StackPanel>

                                <!-- Accuracy Rating -->
                                <StackPanel Grid.Row="3" Margin="0,2">
                                    <TextBlock Text="Accuracy" FontSize="11" Foreground="#808080"/>
                                    <Grid>
                                        <Border Background="#E0E0E0"
                                                Style="{StaticResource MetricBarStyle}"/>
                                        <Border HorizontalAlignment="Left"
                                                Style="{StaticResource MetricBarStyle}"
                                                Width="{Binding AccuracyRatingWidth}">
                                            <Border.Background>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                    <GradientStop Color="#2196F3" Offset="0"/>
                                                    <GradientStop Color="#03A9F4" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Border.Background>
                                        </Border>
                                    </Grid>
                                </StackPanel>

                                <!-- Description -->
                                <TextBlock Grid.Row="4"
                                           Text="{Binding Description}"
                                           FontSize="11"
                                           Foreground="#606060"
                                           TextWrapping="Wrap"
                                           Margin="0,8,0,5"/>

                                <!-- Pros and Cons -->
                                <ScrollViewer Grid.Row="5"
                                              VerticalScrollBarVisibility="Auto"
                                              MaxHeight="100"
                                              Margin="0,5">
                                    <StackPanel>
                                        <!-- Pros -->
                                        <ItemsControl ItemsSource="{Binding Pros}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="✓ "
                                                                   Foreground="#4CAF50"
                                                                   FontSize="11"/>
                                                        <TextBlock Text="{Binding}"
                                                                   FontSize="11"
                                                                   Foreground="#606060"
                                                                   TextWrapping="Wrap"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>

                                        <!-- Cons -->
                                        <ItemsControl ItemsSource="{Binding Cons}"
                                                      Margin="0,5,0,0">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="✗ "
                                                                   Foreground="#F44336"
                                                                   FontSize="11"/>
                                                        <TextBlock Text="{Binding}"
                                                                   FontSize="11"
                                                                   Foreground="#606060"
                                                                   TextWrapping="Wrap"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </ScrollViewer>

                                <!-- Action Button -->
                                <Button Grid.Row="6"
                                        Name="ActionButton"
                                        Margin="0,10,0,0"
                                        Padding="10,5"
                                        HorizontalAlignment="Stretch"
                                        Click="ActionButton_Click"
                                        Tag="{Binding}">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Background" Value="#4CAF50"/>
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="BorderThickness" Value="0"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                            <Setter Property="Cursor" Value="Hand"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}"
                                                                CornerRadius="4"
                                                                Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter HorizontalAlignment="Center"
                                                                              VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#45A049"/>
                                                </Trigger>
                                                <DataTrigger Binding="{Binding IsInstalled}" Value="False">
                                                    <Setter Property="Background" Value="#FF9800"/>
                                                    <Setter Property="Content" Value="Download"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding IsInstalled}" Value="True">
                                                    <Setter Property="Content" Value="Select"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Footer with Recommendation -->
        <Border Grid.Row="2"
                Background="#F5F5F5"
                Padding="15,10">
            <StackPanel>
                <TextBlock FontSize="12"
                           Foreground="#606060">
                    <Run Text="💡 " FontSize="14"/>
                    <Run Text="Recommendation: " FontWeight="SemiBold"/>
                    <Run Name="RecommendationText" Text="Analyzing your system..."/>
                </TextBlock>

                <StackPanel Orientation="Horizontal"
                            Margin="0,5,0,0">
                    <CheckBox Name="PrioritizeSpeedCheckBox"
                              Content="Prioritize speed over accuracy"
                              FontSize="11"
                              Margin="0,0,15,0"
                              Checked="PriorityChanged"
                              Unchecked="PriorityChanged"/>

                    <Button Name="TestModelButton"
                            Content="Test Selected Model"
                            Padding="10,3"
                            FontSize="11"
                            Click="TestModel_Click"
                            IsEnabled="False">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#2196F3"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="4"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#1976D2"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Background" Value="#CCCCCC"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>