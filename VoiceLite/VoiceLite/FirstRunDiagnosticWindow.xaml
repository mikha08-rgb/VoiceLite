<Window x:Class="VoiceLite.FirstRunDiagnosticWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="VoiceLite Installation Check"
        Height="550"
        Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow"
        Background="#F5F5F5">

    <Window.Resources>
        <!-- Modern button style -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#45A049"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#BDBDBD"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#2196F3"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="WarningButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#FF9800"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F57C00"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Icon and Title -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
            <Viewbox Width="48" Height="48" Margin="0,0,15,0">
                <Canvas Width="24" Height="24">
                    <!-- Shield with checkmark icon -->
                    <Path Fill="#4CAF50" Data="M12,1L3,5V11C3,16.55 6.84,21.74 12,23C17.16,21.74 21,16.55 21,11V5L12,1M10,17L6,13L7.41,11.59L10,14.17L16.59,7.58L18,9L10,17Z"/>
                </Canvas>
            </Viewbox>
            <StackPanel>
                <TextBlock Text="Installation Check"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="#212121"/>
                <TextBlock Text="Verifying VoiceLite is ready to use"
                           FontSize="14"
                           Foreground="#757575"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </StackPanel>

        <!-- Status message -->
        <Border Grid.Row="1"
                Background="#E3F2FD"
                BorderBrush="#2196F3"
                BorderThickness="1"
                CornerRadius="6"
                Padding="15"
                Margin="0,0,0,20">
            <TextBlock x:Name="StatusMessage"
                       Text="Running diagnostics..."
                       FontSize="13"
                       Foreground="#1565C0"
                       TextWrapping="Wrap"/>
        </Border>

        <!-- Progress bar -->
        <ProgressBar x:Name="DiagnosticProgress"
                     Grid.Row="2"
                     Height="4"
                     Minimum="0"
                     Maximum="100"
                     Value="0"
                     Margin="0,0,0,20"
                     IsIndeterminate="True"/>

        <!-- Diagnostic checklist -->
        <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto" Margin="0,0,0,20">
            <StackPanel x:Name="ChecklistPanel">
                <!-- Items will be added dynamically -->

                <!-- Template for reference (hidden) -->
                <Border x:Name="TemplateItem"
                        Visibility="Collapsed"
                        Background="White"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1"
                        CornerRadius="6"
                        Padding="15"
                        Margin="0,0,0,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="40"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Status icon -->
                        <Viewbox Grid.Column="0" Width="24" Height="24" Margin="0,0,10,0">
                            <Canvas Width="24" Height="24">
                                <Path x:Name="StatusIcon" Fill="#4CAF50" Data="M12,2C6.48,2 2,6.48 2,12C2,17.52 6.48,22 12,22C17.52,22 22,17.52 22,12C22,6.48 17.52,2 12,2M10,17L5,12L6.41,10.59L10,14.17L17.59,6.58L19,8L10,17Z"/>
                            </Canvas>
                        </Viewbox>

                        <!-- Item content -->
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock x:Name="ItemTitle"
                                       Text="Check Title"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Foreground="#212121"/>
                            <TextBlock x:Name="ItemDescription"
                                       Text="Check description"
                                       FontSize="12"
                                       Foreground="#757575"
                                       Margin="0,3,0,0"
                                       TextWrapping="Wrap"/>
                        </StackPanel>

                        <!-- Fix button (hidden by default) -->
                        <Button x:Name="FixButton"
                                Grid.Column="2"
                                Content="Fix Now"
                                Style="{StaticResource WarningButtonStyle}"
                                VerticalAlignment="Center"
                                Visibility="Collapsed"
                                MinWidth="90"/>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Action buttons -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="ContinueButton"
                    Content="Continue"
                    Style="{StaticResource ModernButtonStyle}"
                    Width="140"
                    Margin="0,0,10,0"
                    Click="ContinueButton_Click"
                    IsEnabled="False"/>
            <Button x:Name="RerunButton"
                    Content="Re-run Checks"
                    Style="{StaticResource SecondaryButtonStyle}"
                    Width="140"
                    Margin="10,0,0,0"
                    Click="RerunButton_Click"
                    IsEnabled="False"/>
        </StackPanel>

        <!-- Footer note -->
        <TextBlock Grid.Row="4"
                   x:Name="FooterNote"
                   Text="This check runs automatically after installation"
                   FontSize="11"
                   Foreground="#9E9E9E"
                   HorizontalAlignment="Center"
                   Margin="0,15,0,0"
                   Visibility="Collapsed"/>
    </Grid>
</Window>
