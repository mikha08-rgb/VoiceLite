<Window x:Class="VoiceLite.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:VoiceLite.Utilities"
        Title="VoiceLite" Height="440" Width="520"
        Icon="VoiceLite.ico"
        WindowStartupLocation="CenterScreen"
        ShowInTaskbar="True"
        StateChanged="Window_StateChanged"
        Background="#F8F9FA"
        BorderThickness="0"
        AllowsTransparency="False"
        ResizeMode="CanResize"
        TextOptions.TextRenderingMode="ClearType"
        TextOptions.TextFormattingMode="Display"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True">

    <!-- Value Converters -->
    <Window.Resources>
        <local:RelativeTimeConverter x:Key="RelativeTimeConverter"/>
        <local:TruncateTextConverter x:Key="TruncateTextConverter"/>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>   <!-- Title bar -->
            <RowDefinition Height="*"/>      <!-- History panel -->
            <RowDefinition Height="Auto"/>   <!-- Buttons -->
        </Grid.RowDefinitions>

        <!-- Title bar with hotkey and status -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                <TextBlock Text="VoiceLite"
                          FontSize="15" FontWeight="SemiBold"
                          Foreground="#4A4A4A"
                          Margin="0,0,8,0"/>
                <TextBlock Text="â€¢"
                          FontSize="15"
                          Foreground="#D0D0D0"
                          Margin="0,0,8,0"/>
                <TextBlock x:Name="HotkeyDisplay"
                          Text="Shift+Z"
                          FontSize="13"
                          Foreground="#7A7A7A"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                <Ellipse x:Name="StatusIndicator" Width="8" Height="8" Fill="#C8E6C9" Margin="0,0,5,0"/>
                <TextBlock x:Name="StatusText" Text="Ready"
                          Foreground="#7A7A7A" FontWeight="Normal" FontSize="12"/>
            </StackPanel>
        </Grid>

        <!-- Hidden UI elements used for state storage (not displayed but referenced in MainWindow.xaml.cs) -->
        <TextBlock x:Name="HotkeyText" Text="F1" Visibility="Collapsed"/>
        <TextBlock x:Name="ModelText" Text="Lite (Free)" Visibility="Collapsed"/>
        <TextBlock x:Name="MicrophoneText" Text="Default" Visibility="Collapsed"/>
        <TextBlock x:Name="AccountStatusText" Text="Not signed in" Visibility="Collapsed"/>

        <!-- HISTORY PANEL (replaces transcription box - fills all remaining space) -->
        <Border Grid.Row="1"
                BorderBrush="#E0E0E0"
                BorderThickness="1"
                Background="White"
                CornerRadius="6"
                Margin="0,0,0,10">
            <Border.Effect>
                <DropShadowEffect Color="#000000" BlurRadius="6" ShadowDepth="1" Opacity="0.06" Direction="270"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/> <!-- Search box (hidden by default) -->
                    <RowDefinition Height="*"/>    <!-- Scrollable list -->
                </Grid.RowDefinitions>

                <!-- Hidden search box (accessible via Ctrl+F) -->
                <Grid x:Name="SearchBoxRow" Grid.Row="0" Visibility="Collapsed" Margin="12,8,12,8">
                    <Border Background="White"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="8,4">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Search icon -->
                            <TextBlock Grid.Column="0"
                                      Text="ðŸ”"
                                      FontSize="12"
                                      Foreground="#95A5A6"
                                      Margin="0,0,6,0"
                                      VerticalAlignment="Center"/>

                            <!-- Search textbox -->
                            <TextBox x:Name="HistorySearchBox"
                                    Grid.Column="1"
                                    BorderThickness="0"
                                    Background="Transparent"
                                    FontSize="12"
                                    VerticalAlignment="Center"
                                    TextChanged="HistorySearchBox_TextChanged"
                                    KeyDown="HistorySearchBox_KeyDown">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="TextBox">
                                                    <Grid>
                                                        <TextBlock Text="Search transcriptions... (Ctrl+F)"
                                                                  FontSize="12"
                                                                  Foreground="#95A5A6"
                                                                  VerticalAlignment="Center"
                                                                  Visibility="{Binding Text, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}"/>
                                                        <ScrollViewer x:Name="PART_ContentHost"/>
                                                    </Grid>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>

                            <!-- Clear search button -->
                            <Button x:Name="ClearSearchButton"
                                   Grid.Column="2"
                                   Content="âœ•"
                                   Width="20"
                                   Height="20"
                                   Background="Transparent"
                                   BorderThickness="0"
                                   Foreground="#95A5A6"
                                   FontSize="14"
                                   Cursor="Hand"
                                   Click="ClearSearchButton_Click"
                                   Visibility="Collapsed"
                                   ToolTip="Clear search (Esc)"/>
                        </Grid>
                    </Border>
                </Grid>

                <!-- Hidden elements for reference in code -->
                <TextBlock x:Name="HistoryCountText" Visibility="Collapsed" Text="0 items"/>
                <Button x:Name="ToggleSearchButton" Visibility="Collapsed" Click="ToggleSearchButton_Click"/>
                <Button x:Name="HistoryMenuButton" Visibility="Collapsed" Click="HistoryMenuButton_Click">
                    <Button.ContextMenu>
                        <ContextMenu x:Name="HistoryActionsMenu">
                            <MenuItem Header="Clear" Click="ClearHistory_Click"/>
                            <MenuItem Header="Clear All" Click="ClearAllHistory_Click"/>
                            <Separator/>
                            <MenuItem Header="Export..." Click="ExportHistory_Click"/>
                        </ContextMenu>
                    </Button.ContextMenu>
                </Button>

                <!-- Scrollable History List (clean, no header) -->
                <ScrollViewer Grid.Row="1"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled"
                              Padding="12,10,12,10"
                              CanContentScroll="True"
                              ScrollViewer.IsDeferredScrollingEnabled="False"
                              VirtualizingPanel.IsVirtualizing="False"
                              VirtualizingPanel.VirtualizationMode="Recycling"
                              VirtualizingPanel.ScrollUnit="Pixel">
                    <StackPanel x:Name="HistoryItemsPanel">
                        <!-- History items added programmatically -->

                        <!-- Empty state - minimal -->
                        <StackPanel x:Name="EmptyHistoryMessage"
                                   Margin="20,60,20,20"
                                   HorizontalAlignment="Center"
                                   Visibility="Visible">
                            <TextBlock Text="No recordings yet"
                                      TextAlignment="Center"
                                      Foreground="#B0B0B0"
                                      FontSize="13"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Settings Button -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="SettingsButton"
                    Content="Settings"
                    Height="36"
                    Width="155"
                    Background="#4169E1"
                    Foreground="White"
                    BorderBrush="#4169E1"
                    BorderThickness="0"
                    FontWeight="SemiBold"
                    FontSize="13"
                    Cursor="Hand"
                    Click="SettingsButton_Click"
                    ToolTip="Open settings (Ctrl+,)">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="6">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#5383EC"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#2952CC"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>

        <!-- Hidden minimize checkbox (still functional via code-behind) -->
        <CheckBox x:Name="MinimizeCheckBox"
                 Content="Minimize to system tray on close"
                 IsChecked="True"
                 Visibility="Collapsed"/>

        <!-- Hidden transcription text box for state storage (referenced in MainWindow.xaml.cs) -->
        <TextBox x:Name="TranscriptionText"
                 Grid.Row="1"
                 Visibility="Collapsed"
                 Text="Ready to transcribe"/>
    </Grid>
</Window>
