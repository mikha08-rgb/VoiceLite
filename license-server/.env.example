# License Server Configuration
# Copy this file to .env and fill in your values

# Server Port
PORT=3000

# API Key - Generate a strong random string (32+ characters)
# This is used by the VoiceLite app to authenticate
API_KEY=your-api-key-here-change-this-immediately

# Admin Key - Generate a different strong random string
# This is used for admin operations like generating licenses
ADMIN_KEY=your-admin-key-here-change-this-immediately

# Database Path
DATABASE_PATH=./data/licenses.db

# Node Environment
NODE_ENV=production

# CORS Origins (comma-separated)
ALLOWED_ORIGINS=https://yourusername.github.io,http://localhost:3000